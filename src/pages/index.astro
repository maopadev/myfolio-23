---
// Layouts Imports
import Layout from '@layouts/main.astro'

// Components Imports
import ListTools from '@components/list/tools.svelte'
import ListProjects from '@components/list/projects.svelte'
import ContactForm from '@components/contactForm.svelte'

---

<Layout data-barba-namespace="home-section">
	<section class="container flex flex-col w-full min-h-screen px-6 md:pt-0 justify-center items-center align-middle z-5 animate-this bg-transparent text-cultured gap-16 lg:gap-0 not-selectable">
		<a href="/about" class="absolute top-12 right-0 w-96 h-14 border-green-400 border-2 justify-center items-center pointer-events-auto z-20">
			About
		</a>
		<h1 id="salute" class="absolute top-40 left-0 flex-col justify-center items-center font-neueBitPro size-subtitle text-left uppercase flex-wrap">
			Hello There!
			<br>
			<strong class="text-cultured hover:text-ocean-fluro size-title transition-all duration-500">
				Mario Ortega<br>Al Habla
			</strong>
		</h1>
		<!-- Nuevo DIV -->
		<h1 id="position" class="absolute bottom-72 right-0 w-96 flex-col justify-center items-center font-neueBitPro size-subtitle text-right uppercase flex-wrap">
			Full Stack Developer, Creative and Tech Enthusiast.
		</h1>
		<div id="exp-indicator" class="container lg:absolute flex flex-col w-1/3 justify-center h-38 items-center align-middle flex-wrap lg:bottom-24 lg:left-0 gap-4">
			<div class="w-full h-full md:px-0 text-center md:text-left text-sm md:text-base transition-all duration-150">
				Experiencia con Portales de Web y soluciones tecnológicas.
				<label class="font-neueBitPro hover:text-yellow-dodie text-xl md:text-2xl transition-all duration-150"> Logic → UI Integration → Deploy on Production</label>
			</div>
			<ListTools client:load/>
		</div>
		<div id="scroll" class="container lg:absolute flex w-full md:w-3/5 lg:w-2/5 h-24 justify-end items-start align-middle flex-wrap 
			lg:bottom-24 lg:right-0 px-4 gap-4 transition-all duration-150">
			<h1 class=" font-neueBitPro text-2xl text-center uppercase text-gray-600">Scroll to Explore ↴</h1>
		</div>
	</section>
	<section id="home-view" class="container flex flex-col w-full h-auto justify-center items-center py-20 animate-this bg-transparent lg:gap-12 z-20 text-cultured">
		<div class="container flex w-full h-full cjustify-center items-center">
			<ListProjects client:load/>
		</div>
		<!--
			SE UBICARÁN LOS PROYECTOS
			-> Con enlace a un dialog sacando la información de estos,
			-> Revisar si es factible hacer scrapping para actualizar la información
		-->
	</section>
	<section id="contact" class="container flex flex-col w-full min-h-screen justify-center items-center py-20 animate-this bg-transparent lg:gap-12 z-20 text-cultured">
		<div class="container flex w-full h-full justify-center items-center ">
			<ContactForm client:load/>
		</div>
	</section>
</Layout>

<style lang="scss">

.size-subtitle {
	font-size: 4vh;
	line-height: 0.75;
}
.size-title {
	font-size: 12vh;
	line-height: 0.75;
}

.not-selectable {
  -webkit-touch-callout: none;
  -webkit-user-select: none;
  -khtml-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
}

</style>
