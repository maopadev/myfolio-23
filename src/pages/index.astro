---
// Layouts Imports
import Layout from '@layouts/main.astro'

// Components Imports
import ListTools from '@components/list/tools.svelte'
import ListProjects from '@components/list/projects.svelte'

---

<Layout data-barba-namespace="home-section">
	<section class="container flex flex-col w-full min-h-screen px-6 pt-24 md:pt-0 justify-center items-center align-middle z-20 animate-this bg-transparent text-cultured gap-16 lg:gap-0 not-selectable">
		<h1 class="flex flex-col justify-center items-center font-neueBitPro size-title text-center uppercase flex-wrap transition-all duration-500 ease-in-out">
			Hello There!<br>
			<strong class="text-cultured hover:text-ocean-fluro">Mario Ortega Al Habla</strong>
			Full Stack Developer, Creative and Tech Enthusiast.
		</h1>
		<div id="exp-indicator" class="container lg:absolute flex flex-col w-full md:w-3/5 justify-center h-38 items-center align-middle flex-wrap lg:bottom-24 lg:left-0 gap-4">
			<div class="w-full h-full md:px-0 text-center md:text-left text-sm md:text-base">
				Experiencia con Portales de Web y soluciones tecnológicas.
				<label class="font-neueBitPro hover:text-yellow-dodie text-xl md:text-2xl"> Logic → UI Integration → Deploy on Production</label>
			</div>
			<ListTools client:load/>
		</div>
		<div id="scroll" class="container lg:absolute flex w-full md:w-3/5 lg:w-2/5 h-24 justify-end items-start align-middle flex-wrap lg:bottom-24 lg:right-0 px-4 gap-4">
			<h1 class=" font-neueBitPro text-2xl text-center uppercase text-gray-600">Scroll to Explore ↴</h1>
		</div>
	</section>
	<section id="home-view" class="flex flex-col w-full min-h-screen justify-center items-center animate-this bg-transparent lg:gap-12 z-20">
		<h1 class=" text-golden-poppy">Home View</h1>
		<!--
			SE UBICARÁN LOS PROYECTOS
			-> Con enlace a un dialog sacando la información de estos,
			-> Revisar si es factible hacer scrapping para actualizar la información
		-->
	</section>
</Layout>

<style lang="scss">

.size-title {
	font-size: 8vh;
	line-height: 0.75;
}

.not-selectable {
  -webkit-touch-callout: none;
  -webkit-user-select: none;
  -khtml-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
}

</style>
