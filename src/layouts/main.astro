---
// > Components Imports
import Navigation from '@components/navbar.svelte'
import Background from '@components/background.svelte'
import Loader from '@components/loader.svelte'

// > Styles SCSS MAIN
import '@styles/app.scss'

---
<!-- Main Layout -->
<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width,shrink-to-fit=no,initial-scale=1,maximum-scale=1,minimum-scale=1,user-scalable=no" />
		<meta name="generator" content={Astro.generator} />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
	</head>
	<body data-barba="wrapper" class="relative w-screen h-screen overflow-x-hidden justify-center items-center bg-bigstone">
		<Background client:visible />
		<Loader client:load />
		<main>
			<Navigation client:visible />
			<h1 class="absolute flex left-24 top-14 font-neueBitPro text-slate-400">{ Astro.url.pathname }</h1>
			<div id="layout" data-barba="container" class="container relative m-auto max-w-screen-xl h-8/12 bg-transparent z-10 justify-center items-center px-12">
				<slot />
			</div>
		</main>
		<!-- Barba JS Init -->
		<script src="../scripts/barba.js" />
	</body>
</html>

<style lang="scss">

</style>